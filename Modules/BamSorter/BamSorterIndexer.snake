# Used for system calls.
from subprocess import call


#-----------------------------------------------------------------------------------------------------------------------------------------------------
# SNAKEMAKE RULE #
rule BWAIndexer:
    input: 
        expand("{outputDIR}/{simulations}/{{simulation_index}}/Assembly/{{name}}.bamSorted",outputDIR=config["outputDIR"],simulations=config["simulations"]),
    output: 
        expand("{outputDIR}/{simulations}/{{simulation_index}}/Assembly/{{name}}.bamSorted.bai",outputDIR=config["outputDIR"],simulations=config["simulations"]),
    params:
        samtools=config["samtools"],
    run:      
        call("%s index %s " %(str(params.samtools),str(input)),shell=True)
